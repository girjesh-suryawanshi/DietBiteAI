# FitBite Production Environment Variables
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=production
PORT=5000

# OpenAI API (for meal plan generation)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (for meal plan generation)
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Configuration (for authentication)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id_here
VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# PostgreSQL Database Configuration
DB_NAME=fitbite
DB_USER=fitbite_user
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://fitbite_user:your_secure_password_here@postgres:5432/fitbite

# Domain Configuration
DOMAIN=yourdomain.com

# Session Secret (generate a random string)
SESSION_SECRET=your_very_long_random_session_secret_here

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://redis:6379

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/server/temp

# Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Health Check
HEALTH_CHECK_PATH=/health